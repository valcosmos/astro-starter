---
import Link from './Link.astro'

const { prevUrl, nextUrl } = Astro.props
---

<nav aria-label="Blog pages">
  {
    prevUrl && (
      <Link
        text="previous"
        href={prevUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{ name: 'tabler:arrow-big-left-line', side: 'left' }}
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="next"
        href={nextUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{ name: 'tabler:arrow-big-right-line', side: 'right' }}
      />
    )
  }
</nav>
