---
import MainLayout from '../layout/MainLayout.astro'
const str = 'Cupid'
const num = 1
const obj = {
	name: str,
	number: num,
	favorites: ['astro', 'css', 'js']
}

const isVisible = false

const res = await fetch('https://jsonplaceholder.typicode.com/posts?_limit=5')
const data = (await res.json()) as { title: string }[]

const backgroundColor = '#ff7441'

const isRed = true
---

<MainLayout title="Index page" description="my index page">
	<p style={{ backgroundColor: '#666' }}>hi from home <span>this is span</span></p>
	<div></div>
	<h5 class:list={['big', { red: isRed }]}>h5 tag</h5>

	<h1>{obj.favorites[isVisible ? 1 : 0].toUpperCase()}</h1>
	===
	{obj.favorites.map((item) => <li>{item.toUpperCase()}</li>)}
	===
	{data.map((item) => <li>{item.title}</li>)}
</MainLayout>

<!-- <style is:global lang="scss" define:vars={{ backgroundColor }}> -->
<style lang="scss" define:vars={{ backgroundColor }}>
	p {
		color: #fff;
		font-size: 4rem;
		span {
			color: bisque;
		}
	}

	div {
		width: 100px;
		height: 100px;
		background-color: var(--backgroundColor);
	}

	.red {
		color: red;
	}
	.big {
		font-size: 5rem;
	}
</style>
